

<form class="login-form" action="/session" method="POST">

<div class="form-contents">
<h1>Log in!</h1>
  <input
    class="input"
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label class="input" for="user_username">Username</label>
  <input class="input input-field" type="text" name="user[username]" id="user_username">
  <br>

  <label class="input" for="user_password">Password</label>
  <input class="input input-field" type="password" name="user[password]" id="user_password">
  <br>

  <input class="input" type="submit" value="Log in!"></div>
</form>

<%= link_to "New User", new_user_url %>
