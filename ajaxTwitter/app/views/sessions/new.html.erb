
<form class="login-form" action="/session" method="POST">

<div class="form-contents">
<h1>Log in!</h1>
  <input
    class="input"
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label class="label" for="user_username"><strong>Username:</strong></label>
  <input class="input input-field" type="text" name="user[username]" id="user_username">
  <br>

  <label class="label" for="user_password"><strong>Password:</strong></label>
  <input class="input input-field" type="password" name="user[password]" id="user_password">
  <br>

<a class="new-user" href="http://localhost:3000/users/new">New User</a>
  <input class="input login" type="submit" value="Log in!"></div>
</form>

